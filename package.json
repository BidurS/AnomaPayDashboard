{
  "name": "anomapay-explorer",
  "version": "1.0.0",
  "description": "Gnoma Multichain Explorer - Analytics dashboard for Anoma Protocol Adapter",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create anomapay-db",
    "db:migrate": "wrangler d1 execute anomapay-db --file=schema.sql",
    "db:migrate:local": "wrangler d1 execute anomapay-db --local --file=schema.sql",
    "tail": "wrangler tail"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240614.0",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.1"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "web3",
    "anoma",
    "blockchain",
    "indexer"
  ],
  "author": "Bidur",
  "license": "MIT",
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "node-fetch": "^3.3.2",
    "viem": "^2.45.0",
    "zod": "^4.3.6"
  }
}
